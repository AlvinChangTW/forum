   <%= form_for @topic, :url => topic_path(@topic), :method => :patch do |f| %>
          <%# raise%>

          <div class="form-group">
            <%= f.label :name, "文章主題" %>
            <%= f.text_field :name ,:class => "form-control"%>
          </div>
          <div class="form-group">
            上傳主題照片<%= f.file_field :picture%>
            <% if @topic.picture_file_name %>
              <div class="topic-img">
                <%= image_tag @topic.picture.url(:medium) %>
              </div>
              <%= check_box_tag :delete_pic,"1"%>刪除照片
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :content, "文章內容" %>
            <%= f.text_area :content ,:class => "form-control"%>
          </div>
            <%= f.submit "更新內容", :class => "btn btn-primary"%>

     <% end %>
     <%= link_to "返回主頁", topics_path, :class =>"btn btn-info"%>