<h4 class="text-info">使用者資料</h4>
<ul class="list-group">
  <li class="list-group-item">使用者名稱：<%= @user.nickname%></li>
  <li class="list-group-item">使用者信箱：<%= @user.email%></li>
  <li class="list-group-item">使用者簡介：<%= @user.description%></li>
</ul>
<h4 class="text-info">使用者文章</h4>
<ul class="list-group">
<% @user.topics.each do |t|%>
  <li class="list-group-item">文章主題：<%= link_to t.name,topic_path(t)%></li>
<% end %>
</ul>
<h4 class="text-info">使用者留言</h4>
<table class="table">
  <thead>
    <tr>
      <th>文章主題</th>
      <th>留言內容</th>
    </tr>
  </thead>
  <tbody>
      <% @user.comments.each do |c|%>
        <tr>
          <td><%= c.topic.try(:name) %></td>
          <td><%= c.content %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<%= link_to "返回主頁", topics_path, :class =>"btn btn-info"%>

