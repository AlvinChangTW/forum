<h4 class="text-info">使用者資料</h4>
<ul class="list-group">
  <li class="list-group-item">使用者名稱：<%= @user.nickname%></li>
  <li class="list-group-item">使用者信箱：<%= @user.email%></li>
  <li class="list-group-item">使用者簡介：<%= @user.description%></li>
</ul>
<h4 class="text-info">使用者文章</h4>
<ul class="list-group">
<% @user.topics.each do |t|%>
  <li class="list-group-item">文章主題：<%= link_to t.name,topic_path(t)%></li>
<% end %>
</ul>
<h4 class="text-info">使用者按讚文章</h4>
<ul class="list-group">
<% @likes.each do |l|%>
  <li class="list-group-item">文章主題：<%= link_to l.name,topic_path(l)%></li>
<% end %>
</ul>
<h4 class="text-info">使用者留言</h4>
<table class="table">
  <thead>
    <tr>
      <th>文章主題</th>
      <th>留言內容</th>
    </tr>
  </thead>
  <tbody>
      <% @comments.each do |c|%>
        <tr>
          <td class="col-sm-2"><%= link_to c.topic.try(:name), topic_path(c.topic_id)%></td>
          <td class="col-sm-6"><%= c.content %></td>
        </tr>
      <% end %>
    </tbody>
</table>
  <div class="pager">留言頁數<%= paginate @comments%></div>

<%= link_to "返回主頁", topics_path, :class =>"btn btn-info"%>

